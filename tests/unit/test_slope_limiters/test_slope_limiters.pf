module test_slope_limiters
  use, intrinsic :: iso_fortran_env, only: ik => int32, rk => real64
  use mod_slope_limiter, only: slope_limiter_t

  use funit
  implicit none

contains

  @test
  subroutine test_basic()

    type(slope_limiter_t) :: limiter

    limiter = slope_limiter_t(name='upwind')

    @assertEqual(2.0_rk, limiter%limit(a=2.0_rk, b=2.0_rk))

    limiter = slope_limiter_t(name='unknown')
    @assertEqual('upwind', limiter%name)
  end subroutine test_basic

end module test_slope_limiters
